<aura:component controller="CH_LightningController" implements="flexipage:availableForRecordHome,force:hasRecordId" > 
    <!-- NOKIASC-36145, 35214, 35215 -->
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="docType" type="String" />
    <aura:attribute name="caseNumber" type="String" />
    <aura:attribute name="openPopup" type="boolean" default="false"/>
    <aura:attribute name="timezoneOptions" type="List" access="PRIVATE"  default="GMT"/>
    <aura:attribute name="selectedTimezone" type="String" access="PRIVATE"/>
    <aura:attribute name="previewDoc" type="boolean" access="PRIVATE" default="false"/>
    <lightning:workspaceAPI aura:id="workspace" />

    <!-- Code to display the spinner when searching -->
    <aura:attribute name="showSpinner" type="boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <aura:if isTrue="{!v.showSpinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    
    <lightning:card title="{!v.docType+' Report: '+v.caseNumber}">
        <aura:set attribute="actions">
			 <!-- Commenting the PDF button as a part of NOKIASC-38816 -->
			<!-- <lightning:button aura:id="printButton" iconName="utility:arrow_bottom" variant="brand" title="Download" label="Download As PDF " onclick="{!c.downloadasPDF}"/> --> 
            <lightning:button iconName="utility:arrow_bottom" variant="brand" title="Download" label="Download As Word" onclick="{!c.downloadHandler}"/>   
        </aura:set>
        
        <aura:if isTrue="{!v.openPopup}">
            <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
            <!-- Modal/Popup Box starts here-->
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container statusclass">
                    <!-- Modal/Popup Box Header Starts here-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close" onclick="{! c.closeModel}" alternativeText="close" variant="bare-inverse" class="slds-modal__close"/>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Please select a Timezone</h2>
                    </header>
                    <!--Modal/Popup Box Body Starts here-->
                    
                    <div class="slds-modal__content slds-p-around_large statusclassModalcontent" id="modal-content-id-1">
                        <lightning:messages />
                        <aura:if isTrue="{!v.showSpinner}">                            
                            <lightning:spinner variant="brand" size="medium" />
                        </aura:if> 
                        <div class="slds-grid slds-gutters">
                            <div class="slds-col slds-size_1-of-2">
                                <lightning:select name="tzId" label="Select a Timezone:" aura:id="tzId" value="{!v.selectedTimezone}" onchange="{! c.tzHandler}">
                                    <aura:iteration items="{!v.timezoneOptions}" var="tz">
                                        <option text="{!tz.label}" value="{!tz.value}" selected="{!tz.selected}"/>
                                    </aura:iteration>
                                </lightning:select>                     
                            </div>
                        </div>
                    </div>
                    <footer class="slds-modal__footer">
                        <lightning:button variant="brand" label="Proceed" title="Proceed with GMT" onclick="{! c.tzHandler }"/>
                        <lightning:button variant="neutral" label="Cancel" title="Cancel" onclick="{! c.closeModel }"/>
                    </footer>                    
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </aura:if>
        <aura:if isTrue="{!v.previewDoc}">
            <div style="background-color: var(--lwc-colorBackground,rgb(245, 245, 245))">
                <div class="c-container slds-grid slds-grid_align-center slds-p-vertical_xx-large">
                    <c:CH_DocumentPreview aura:id	="prevCmp"
                                          recordId ="{!v.recordId}"
                                          selectedTimezone="{!v.selectedTimezone}"
                                          docType ="{!v.docType}"
                                          caseNumber="{!v.caseNumber}"/>
                </div>
            </div>
        </aura:if>
    </lightning:card>
</aura:component>