<aura:component controller="PreapprovedCustomProductsController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="ProductConfigId" type="String" />
    <aura:attribute name="RecordDisplayMessage" type="string" default="No Records To Display" />
    <aura:attribute name="infoMessage" type="string" />
    <aura:attribute name="searchResult" type="List" />
    <aura:attribute name="ShowParentModal" type="boolean" default="true" />
    <aura:attribute name="Message" type="boolean" default="false" />
    <aura:attribute name="button" type="boolean" default="true" />
    <aura:attribute name="showSpinner" type="Boolean" default="true" />
    <aura:attribute name="has_error" type="Boolean" default="false" />
    <aura:attribute name="success" type="Boolean" default="false" />
    <aura:attribute name="error" type="String" />
    <aura:attribute name="searchKeyword" type="String" />
    
    <aura:if isTrue="{!v.ShowParentModal}">
        <aura:if isTrue="{!v.showSpinner}">
        <lightning:spinner alternativeText="Loading ..." />
        Loading ...
        </aura:if>
        <div class="demo-only" style="height: 1940px;">
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open slds-modal--large">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        
                            <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Pre-Approved Custom Products</h2>  

                            <aura:if isTrue="{!v.has_error}">
                                <ui:message title="Error" severity="error" closable="true">
                                    <aura:unescapedHtml value="{!v.error}"></aura:unescapedHtml>
                                </ui:message>
                                <br></br>
                            </aura:if>
                            
                            <aura:if isTrue="{!v.success}">
                                <ui:message title="Confirmation" severity="confirm" closable="true">
                                    Products loaded successfully.<br></br> <aura:unescapedHtml value="{!v.infoMessage}"></aura:unescapedHtml>
                                </ui:message>
                            </aura:if>

                        
                        <aura:if isTrue="{!v.Message}">
                            <div class="slds-box slds-box--x-small slds-theme--success">
                                <p> Redirecting to cart</p>
                            </div>
                        </aura:if>
                    </header>
                    <aura:if isTrue="{!not(v.Message)}">
                        <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                            
                            <div class="slds-m-around_medium">
                                <lightning:layout>
                                    <lightning:layoutItem size="4" padding="around-small">
                                        <lightning:input value="{!v.searchKeyword}"
                                                         placeholder="search by Product Code.."
                                                         aura:id="searchField"
                                                         />
                                    </lightning:layoutItem>
                                    <br/>
                                    <lightning:layoutItem size="2" padding="around-small">
                                        <lightning:button onclick="{!c.Search}"
                                                          variant="brand"
                                                          label="Search"
                                                          iconName="utility:search"/> 
                                    </lightning:layoutItem>
                                </lightning:layout>
                                <br></br>
                                <p style="margin-left: 12px;color: #ec6200;"><b>Note:</b> Product Name will be populated as Custom Product Name and Alias in the cart. Alias is editable in the cart.</p>
                                <br></br>
                                <table class="slds-table_fixed-layout slds-table slds-table_bordered slds-table_col-bordered slds-table_cell-buffer">
                                    <thead>
                                        <tr class="slds-text-title_caps slds-line-height_reset">
                                            <th scope="col" >
                                                <div class="slds-truncate" title="Checkbox">Select</div>
                                            </th>
                                            <th scope="col" >
                                                <div class="slds-truncate" title="Name">Product Name</div>
                                            </th>
                                            <th scope="col">
                                                <div class="slds-truncate" title="Code">Product Code</div>
                                            </th>
                                            
                                            
                                        </tr>
                                    </thead>
                                    <tbody> 
                                        <aura:iteration items="{!v.searchResult}" var="prod" indexVar="count">
                                            <tr>
                                                <td>
                                                    <label class="slds-checkbox">
                                                        <ui:inputCheckbox aura:id="checkContact" click="{!c.CheckboxClick}" value="false"/>
                                                        <span class="slds-checkbox--faux" />
                                                        <span class="slds-form-element__label"></span>
                                                    </label>
                                                
                                                </td>

                                                <td class="slds-truncate  slds-cell-wrap">
                                                    <div class="slds-truncate slds-cell-wrap">{!prod.Name}</div>
                                                </td>
                                                <td>
                                                    <div class="slds-truncate">{!prod.Product_Code__c}</div>
                                                </td>
                                                
                                                
                                            </tr>
                                        </aura:iteration>
                                    </tbody>
                                </table>
                                <div class="slds-align_absolute-center" style="height:5rem">{!v.RecordDisplayMessage}</div>
                            </div>
                        </div>
                    </aura:if>
                    
                    <footer class="slds-modal__footer slds-modal__footer_directional">
                        <lightning:button onclick="{!c.AddToCart}"
                                          variant="brand"
                                          label="Add Selected Products To Cart"
                                          disabled="{!v.button}"
                                          /> 
                        <lightning:button onclick="{!c.RedirectTocart}"
                                          variant="brand"
                                          label="Go To Cart"
                                          disabled="{!v.Message}"
                                          /> 
                        
                    </footer>
                </div>
                
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
        
    </aura:if>
</aura:component>