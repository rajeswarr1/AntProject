                        <div class="slds-col slds-size_1-of-2">
                            <lightning:outputField fieldName="CH_SW_Release__c"/>
                        </div>
                        <div class="slds-col slds-size_1-of-2">
                            <lightning:outputField fieldName="CH_Product_Module__c"/>
                        </div>
                        <div class="slds-col slds-size_1-of-2">
