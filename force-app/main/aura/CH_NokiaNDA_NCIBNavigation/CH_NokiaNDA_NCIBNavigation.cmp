<aura:component controller="CH_CaseField_SideHighlightApex" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction,lightning:isUrlAddressable" access="global" >
	<lightning:workspaceAPI aura:id="workspace" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="casNumber" type="String"/>
    <aura:attribute name="ndaUrl" type="String"/>
    <aura:attribute name="ncibUrl" type="String"/>
    <aura:attribute name="firUrl" type="String"/>
    <aura:attribute name="caseClosureUrl" type="String"/>
    <aura:attribute name="disableFir" type="Boolean" default="false"/>
    <aura:attribute name="caseUrlMap" type="map" />
	<!--NOKIASC-35336 -->
    <aura:attribute name="showFIR" type="Boolean" default="false"/>
	<aura:attribute name="showCCR" type="Boolean" default="false"/>
<div class="slds-card">
 <div class="slds-card__header slds-grid">
	<header class="slds-media slds-media_center slds-has-flexi-truncate">
		
		<div class="slds-media__body">
			<h2 class="slds-card__header-title">
				<a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Tools">
					<span>Tools</span>
				</a>
			</h2>
		</div>
		<div class="slds-no-flex">
			<lightning:buttonMenu onselect="{! c.handleMenuSelect }" menuAlignment="right">
				<lightning:menuItem label="Nokia Digital Assistant" title="Nokia Digital Assistant" value="NDA" />
				<lightning:menuItem label="NCIB" title="NCIB" value="NCIB"/>
				<!-- added if condition as part of NOKIASC-35336 -->
                <aura:if isTrue="{!v.showFIR}">
                    <lightning:menuItem label="FIR" title="FIR" value="FIR" disabled="{!v.disableFir}"/>
				</aura:if>
                <aura:if isTrue="{!v.showCCR}">
                    <lightning:menuItem label="Case Closure Report" title="Case Closure Report" value="CCR" disabled="{!v.disableFir}"/>
                </aura:if>
			</lightning:buttonMenu> 
      </div>
	</header>
 </div>

  
</div>

</aura:component>