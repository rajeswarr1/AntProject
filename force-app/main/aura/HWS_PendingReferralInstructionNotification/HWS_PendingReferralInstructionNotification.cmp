<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <lightning:empApi aura:id="empApi" />    
    <!--<aura:handler name="init" value="{!this}" action="{!c.myAction}"/>    -->
    <aura:attribute name="subscription" type="Map" />
    <aura:attribute name="IsSpinner" type="Boolean"/>
    <aura:attribute name="recordError" type="String"/>
    <aura:attribute name="recordInfo" type="Object" />
    <aura:attribute name="simpleRecord" type="Object"/>
    <aura:attribute name="recordId" type="String"/>
	<aura:attribute name="IsFirst" type="Boolean" default="true"/>
    <aura:if isTrue="{!v.IsFirst}">  
    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      layoutType="FULL"                      
                      targetRecord="{!v.recordInfo}"                        
                      targetFields="{!v.simpleRecord}"    
                      targetError="{!v.recordError}"
                      recordUpdated="{!c.myAction}" 
                      mode="EDIT"
                      />     
    </aura:if>					  
    <aura:if isTrue="{!v.IsSpinner}">        
        <lightning:spinner class="spins" size="large" variant="brand" alternativeText="Loading" />        
    </aura:if>
</aura:component>