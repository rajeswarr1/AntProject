<aura:component implements="forceCommunity:availableForAllPageTypes,force:hasRecordId" access="global" controller="CH_LightningController">
	<aura:attribute name="recordId" type="Id"/>
    <aura:attribute name="mileStoneLst" type="List"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
	<div class="slds-card__body slds-card__body_inner slds-m-bottom_medium">	
        <aura:iteration items="{!v.mileStoneLst}" var="ms" >
            <div class="slds-grid slds-wrap">
                <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-3">
                    <lightning:recordViewForm objectApiName="CaseMileStone" recordId="{!ms.Id}">
                        Milestone Type<lightning:outputField fieldName="MilestoneTypeId"  variant="label-hidden" style="pointer-events: none;color: black;text-decoration: none;cursor: default;"/> 	
                    </lightning:recordViewForm>	
                </div><br/>
                <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-3">
                    <lightning:recordViewForm objectApiName="CaseMileStone" recordId="{!ms.Id}">	
                        <lightning:outputField fieldName="CompletionDate"/> 	
                    </lightning:recordViewForm>	
                </div><br/>
                <div class="slds-col--padded slds-size--1-of-1 slds-medium-size--1-of-3">
                    <lightning:recordViewForm objectApiName="CaseMileStone" recordId="{!ms.Id}">	
                        <lightning:outputField fieldName="TargetDate"/> 	
                    </lightning:recordViewForm>	 
                </div>
            </div>
        </aura:iteration>
    </div>
</aura:component>