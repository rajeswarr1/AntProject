<aura:component controller="CH_CaseField_SideHighlightApex" implements="flexipage:availableForRecordHome,force:hasRecordId,lightning:availableForFlowActions" > 
    
    <aura:attribute name="record" type="Object" />
    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="simpleRecord" type="Object" />
    <aura:attribute name="createArticleFinished" type="boolean" default="true"/>
    <aura:attribute name="issueResolvedFinished" type="boolean" default="true"/>
	<aura:attribute name="issueResolvedFinish" type="boolean" default="false"/>
    <aura:attribute name="createArticleFinish" type="boolean" default="false"/>
    <aura:attribute name="edit" type="boolean" />
    <aura:attribute name="tag" type="Object" />
    <!--Adding attribute to disable button-->
    <aura:attribute name="disableCAButton" type="Boolean" default="false"/>
    <aura:attribute name="disableSIRButton" type="Boolean" default="false"/>
    <aura:attribute name="numRecords" type="Integer" default="0"/>
    <!-- Code to display the spinner when searching -->
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <aura:if isTrue="{!v.Spinner}">
        <div aura:id="spinnerId" class="slds-spinner_container">
            <div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
                <span class="slds-assistive-text">Loading</span>
                <div class="slds-spinner__dot-a"></div>
                <div class="slds-spinner__dot-b"></div>
            </div>
        </div>
    </aura:if>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:handler event="force:refreshView" action="{!c.reDoInit}"/>
    
    <!-- <aura:if isTrue="{!v.createArticleFinished}">
        <div class="createArticleFinished">
            <lightning:flow aura:id="createArticle" onstatuschange="{!c.handleCreateArticleChange}"/>
        </div> 
    </aura:if> -->
    
    <!--NOKIASC-31219 Us Start-->
    
    <aura:if isTrue="{!v.createArticleFinish}">
        <div class="createArticleFinish">
            <div class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <button class="slds-button slds-button--icon-inverse slds-modal__close" onclick="{!c.closeArticlepopup}">
                            <lightning:icon iconName="utility:close" variant="bare"/>
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Create Article</h2>
                    </header>
                    <div style="position:relative">
                        <aura:if isTrue="{!v.showSpinner}">
                            <lightning:spinner alternativeText="Loading" size="large" />
                        </aura:if>
                        <div class="slds-modal__content slds-p-around_medium slds-scrollable_y" style="height:17rem;">
                            <lightning:flow aura:id="createArticle" onstatuschange="{!c.handleCreateArticleChange}"/>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="slds-backdrop slds-backdrop_open"></div> 
        </div> 
    </aura:if>
    <!-- NOKIASC-31219 US End-->
    
    <!--
    <aura:if isTrue="{!v.issueResolvedFinished}">
        <div class="issueResolvedFinished">
            <lightning:flow aura:id="issueResolved" onstatuschange="{!c.handleIssueResolvedChange}"/>
        </div> 
    </aura:if>
    -->
	<!--Start Changes for US-31218-->
	<aura:if isTrue="{!v.issueResolvedFinish}">
        <div class="issueResolvedFinish">
            <div class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <button class="slds-button slds-button--icon-inverse slds-modal__close" onclick="{!c.close}">
                            <lightning:icon iconName="utility:close" variant="bare"/>
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Set Issue Resolved</h2>
                    </header>
                    <div style="position:relative">
                        <aura:if isTrue="{!v.showSpinner}">
                            <lightning:spinner alternativeText="Loading" size="large" />
                        </aura:if>
                        <div class="slds-modal__content slds-p-around_medium slds-scrollable_y" style="height:13rem;">
                            <lightning:flow aura:id="issueResolved" onstatuschange="{!c.handleIssueResolvedChange}"/>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="slds-backdrop slds-backdrop_open"></div> 
        </div> 
    </aura:if>
	<!--End Changes for US-31218-->
    <aura:if isTrue="{!v.edit}">
        <lightning:layout class="blockdisplay" horizontalAlign="Left">
            <lightning:layoutItem flexibility="auto" padding="around-small">
                <Lightning:recordEditForm aura:id="recordEditForm" 
                                          recordId="{!v.recordId}"
                                          objectApiName="Case"
                                          onsuccess="{!c.handleSuccess}" >
                    <Lightning:messages />
                    <div class="slds-form-element">
                        <div class="slds-form-element__control">
                            <Lightning:inputField fieldName="CH_SolutionDetails__c" /> 
                        </div>
                    </div>
                    <br/>
                    <div class="slds-grid slds-gutters">
                        <div class="slds-col">    
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <lightning:inputField  fieldName="CH_CaseCause__c" />
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="slds-col">     
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <Lightning:inputField fieldName="CH_Defect__c"/> 
                                </div>
                            </div>
                            <br/>
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <Lightning:inputField fieldName="CH_SuspectedDataBreach__c" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="slds-grid slds-gutters">
                        <div class="slds-col">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <div class="slds-form-element slds-form-element_stacked">
                                        <span class="slds-form-element__label">Tag</span>
                                        <div class="slds-form-element__control">
                                            <div class="slds-form-element__static">
                                                <a href="{! '/lightning/r/'+v.tag.Id+'/view' }">{! v.tag.CH_TagName__c }</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="slds-grid slds-gutters">
                        <div class="slds-col">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <!-- Change in Button Label US 22326 From "Save Record" to "Save"-->
                                    <lightning:button class="slds-m-top_small" variant="brand" type="button" name="update" label="Save" onclick="{!c.update}" />
                                    <!-- Change in Button Label US 22326 From "Save Record" to "Save"-->
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="slds-col">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <c:CH_CaseTagSelection id="{!v.recordId}" object="Case"/>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="slds-col">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <lightning:button class="slds-m-top_small" variant="brand" type="button" name="update" label="Create Article" onclick="{!c.launchCreateArticle}" disabled="{!v.disableCAButton}" />
                                </div>
                            </div>
                        </div> 
                        <br/>
                        <div class="slds-col">
                            <div class="slds-form-element">
                                <div class="slds-form-element__control">
                                    <lightning:button class="slds-m-top_small" variant="brand" type="button" name="update" label="Set Issue Resolved" onclick="{!c.finalSolution}" disabled="{!v.disableSIRButton}"/>
                                </div>
                            </div>
                        </div>  
                        <br/>
                        <br/>
                    </div>
                </Lightning:recordEditForm>
            </lightning:layoutItem>
        </lightning:layout>
        <aura:set attribute="else">
            <lightning:layout horizontalAlign="Left">
                <lightning:layoutItem flexibility="auto" padding="around-small">
                    <Lightning:recordViewForm aura:id="recordViewForm" 
                                              recordId="{!v.recordId}"
                                              objectApiName="Case" >
                        <Lightning:messages />
                        <div class="slds-form-element">
                            <div class="slds-form-element__control">
                                <Lightning:outputField fieldName="CH_SolutionDetails__c" /> 
                            </div>
                        </div>
                        <br/>
                        <div class="slds-grid slds-gutters">
                            <div class="slds-col">    
                                <div class="slds-form-element">
                                    <div class="slds-form-element__control">
                                        <lightning:outputField  fieldName="CH_CaseCause__c" />
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <div class="slds-col">     
                                <div class="slds-form-element">
                                    <div class="slds-form-element__control">
                                        <Lightning:outputField fieldName="CH_Defect__c"/> 
                                    </div>
                                </div>
                                <br/>
                                <div class="slds-form-element">
                                    <div class="slds-form-element__control">
                                        <Lightning:outputField fieldName="CH_SuspectedDataBreach__c" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="slds-grid slds-gutters">
                            <div class="slds-col">
                                <div class="slds-form-element">
                                    <div class="slds-form-element__control">
                                        <div class="slds-form-element slds-form-element_stacked">
                                            <span class="slds-form-element__label">Tag</span>
                                            <div class="slds-form-element__control">
                                                <div class="slds-form-element__static">{! v.tag.CH_TagName__c }</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </Lightning:recordViewForm>
                </lightning:layoutItem>
            </lightning:layout>
        </aura:set>
    </aura:if>
</aura:component>