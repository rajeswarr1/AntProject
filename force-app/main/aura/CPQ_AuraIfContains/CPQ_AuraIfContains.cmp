<aura:component>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <!-- <aura:handler name="change" value="{!v.element}" action="{!c.doInit}"/> -->

    <aura:registerEvent name="handleDiscountChangesEvent" type="c:HandleDiscountChangesEvent" />

    <aura:attribute name="sequence" type="Integer" default="0" />
    <aura:attribute name="lineItemId" type="String" />
    <aura:attribute name="lineItemDiscounts" type="Object" />
    <aura:attribute name="masterDiscount" type="String" />
    <aura:attribute name="masterDiscountId" type="String" />
    <aura:attribute name="masterDiscountCode" type="String" />
    <aura:attribute name="condition" type="Boolean" />

    <aura:if isTrue="{!v.condition}">
        <input id="{!v.lineItemId + '_' + v.masterDiscount}" type="checkbox" name="checkbox" value="{!v.masterDiscount}" checked="checked"/>
        <aura:set attribute="else">
            <input id="{!v.lineItemId + '_' + v.masterDiscount}" type="checkbox" name="checkbox" value="{!v.masterDiscount}" />
        </aura:set>
    </aura:if>
    <label class="slds-checkbox_button__label" for="{!v.lineItemId + '_' + v.masterDiscount}" data-sequence="{!v.sequence}" data-id="{!v.lineItemId}" data-discounts="{!v.lineItemDiscounts}" data-val="{!v.masterDiscountCode}" onclick="{!c.handleDiscountChangesEvent}">  
        <span class="slds-checkbox_faux">{!v.masterDiscountCode}</span>
    </label>
</aura:component>