<apex:page standardController="CPQ_ExportAttach__c" extensions="NokiaCPQ_EaControllerExtension" readOnly="false" sidebar="false"
    standardStylesheets="false" lightningStyleSheets="true" docType="html-5.0" showHeader="false">
    <apex:includeLightning ></apex:includeLightning>
    <div id="lightning" />
    <apex:outputText value="{!CPQ_ExportAttach__c.CPQ_Account__c}" rendered="false" />
    <apex:slds />
    <div id="LoadingvfDIV" class="slds-spinner_container" style="display:block;">
        <div class="slds-spinner slds-spinner--medium" aria-hidden="false" role="alert">
            <div class="slds-spinner__dot-a"></div>
            <div class="slds-spinner__dot-b"></div>
        </div>
    </div>
    <script>
        var myUserContext = "{!$User.UITheme}";
        $Lightning.use("c:nokiaCPQ_AccreditationExportAuraApp", function () {
            $Lightning.createComponent("c:nokiaCPQ_AccreditationExportAura",
                { accountId: '{!account}' },
                "lightning",
                function (cmp) {
                    var loadingDivElement = document.getElementById("LoadingvfDIV");
                    loadingDivElement.style.display = 'none'
                });
        });    
    </script>
</apex:page>